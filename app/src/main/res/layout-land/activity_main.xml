<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".main.MainActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleY="0.5"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/ExtraButtonLayouts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuButtonsLayout"
        app:layout_constraintVertical_bias="0.72" />

    <LinearLayout
        android:id="@+id/ExtraButtonLayouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@android:color/black"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:id="@+id/recycler_view"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <Button
                    android:id="@+id/ClearHistory"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/green_selector"
                    android:text="Clear History"
                    android:tag="Clear History"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="5dp"
                android:scaleX="0.5"
                android:background="@color/cardview_light_background"
                />

        </LinearLayout>

     <LinearLayout
        android:id="@+id/historyOrExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <LinearLayout
            android:id="@+id/buttonLayoutExtraOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@android:color/black"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <ImageButton
                     android:id="@+id/switchButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:scaleType="fitCenter"
                     android:src="@drawable/ic_switch"
                     android:tag="One"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/radiansButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="Rad"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/piButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="π"
                     android:tag="π"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
