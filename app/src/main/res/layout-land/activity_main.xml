                 android:layout_height="match_parent"
                 android:orientation="horizontal">

                 <Button
                     android:id="@+id/sinButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="sin"
                     android:tag="sin"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/cosButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="cos"
                     android:tag="cos"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/tanButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="tan"
                     android:tag="tan"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">

                 <Button
                     android:id="@+id/lnButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="ln"
                     android:tag="ln"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/ralogButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:tag="log"
                     android:text="log"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <Button
                     android:id="@+id/fractionButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:text="1/x"
                     android:tag="1/x"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal">

                 <ImageButton
                     android:id="@+id/exponentButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:scaleType="fitCenter"
                     android:src="@drawable/ic_e_to_x"
                     android:tag="e^x"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <ImageButton
                     android:id="@+id/squaredButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:scaleType="fitCenter"
                     android:src="@drawable/ic_x_squared"
                     android:tag="x^2"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />

                 <ImageButton
                     android:id="@+id/exponentYButton"
                     android:layout_width="70dp"
                     android:layout_height="30dp"
                     android:layout_marginHorizontal="12dp"
                     android:layout_marginVertical="2dp"
                     android:layout_weight="1"
                     android:background="@drawable/gray_selector"
                     android:src="@drawable/ic_x_to_y"
                     android:scaleType="fitCenter"
                     android:tag="^"
                     android:textAllCaps="false"
                     android:textColor="@android:color/white"
                     android:textSize="20sp" />
             </LinearLayout>

             <LinearLayout
