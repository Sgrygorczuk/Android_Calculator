                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="Rad"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/cuberootButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:src="@drawable/ic_cbrt"
                        android:scaleType="fitCenter"
                        android:tag="cbrt"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/asinButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_asin"
                        android:tag="asin"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/arccosButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_acos"
                        android:tag="acos"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/arctanButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_atan"
                        android:tag="atan"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/sinhButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="sinh"
                        android:tag="sinh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/coshButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="cosh"
                        android:tag="cosh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/tanhButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="tanh"
                        android:tag="tanh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/arcsinhButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_asinh"
                        android:tag="asinh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/arccoshButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_acosh"
                        android:tag="acosh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/arctanhButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_atanh"
                        android:tag="atanh"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/twoToXButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_2_to_x"
                        android:tag="2^x"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/xCubedButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_x_cubed"
                        android:tag="x^3"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/factorialButton"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="x!"
                        android:tag="x!"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@android:color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calculatorView">

            <Button
                android:id="@+id/clearButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/c"
                android:tag="C"
                android:textColor="#FA7650"
                android:textSize="20sp" />

            <Button
                android:id="@+id/radButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/rad"
                android:tag="@string/rad"
                android:textColor="#00C604"
                android:textSize="20sp" />

            <Button
                android:id="@+id/perButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/per"
                android:tag="@string/per"
                android:textColor="#00C604"
                android:textSize="20sp" />

            <Button
                android:id="@+id/divButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/div"
                android:tag="@string/div"
                android:textColor="#00C604"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sevenButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/_7"
                android:tag="@string/_7"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eightButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/_8"
                android:tag="@string/_8"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nineButton"
                 android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="2dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
