<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.example.calculator.main.MainActivity">

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

    <LinearLayout
        android:id="@+id/historyWarp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        >

            <LinearLayout
                android:id="@+id/historyNumbers"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/clearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/c"
                        android:tag="C"
                        android:textColor="#FA7650"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/sevenButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_7"
                        android:tag="@string/_7"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/fourButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_4"
                        android:tag="@string/_4"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/oneButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_1"
                        android:tag="@string/_1"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/negButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/plusMinus"
                        android:tag="@string/plusMinus"
                        android:textColor="#FFFF"
                        android:textSize="40sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/radButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/rad"
                        android:tag="@string/rad"
                        android:textColor="#00C604"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/eightButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_8"
                        android:tag="@string/_8"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/fiveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_5"
                        android:tag="@string/_5"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />


                    <Button
                        android:id="@+id/twoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_2"
                        android:tag="@string/_2"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/zeroButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_0"
                        android:tag="@string/_0"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/perButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/per"
                        android:tag="@string/per"
                        android:textColor="#00C604"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/nineButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_9"
                        android:tag="@string/_9"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/sixButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_6"
                        android:tag="@string/_6"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/threeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/_3"
                        android:tag="@string/_3"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                    <Button
                        android:id="@+id/decimalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_selector"
                        android:text="@string/decimal"
                        android:tag="@string/decimal"
                        android:textColor="@android:color/white"
                        android:textSize="40sp" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:id="@+id/recycler_view"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <Button
                        android:id="@+id/ClearHistory"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_selector"
                        android:text="Clear History"
                        android:tag="Clear History"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:scaleX="0.5"
                android:background="@color/cardview_light_background"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/divButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/div"
                android:tag="@string/div"
                android:textColor="#00C604"
                android:textSize="40sp" />

            <Button
                android:id="@+id/timesButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/times"
                android:tag="@string/times"
                android:textColor="#00C604"
                android:textSize="40sp" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/minus"
                android:tag="@string/minus"
                android:textColor="#00C604"
                android:textSize="40sp" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/gray_selector"
                android:text="@string/plus"
                android:tag="@string/plus"
                android:textColor="#00C604"
                android:textSize="40sp" />
            <Button
                android:id="@+id/equalButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@drawable/green_selector"
                android:text="@string/equal"
                android:tag="@string/equal"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/calculatorView"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/black"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/resultsView"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintEnd_toStartOf="@id/curosorTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <TextView
        android:id="@+id/curosorTextView"
        android:layout_width="10dp"
        android:layout_height="90dp"
        android:ems="10"
        android:textSize="60sp"
        android:textAlignment="viewStart"
        android:layout_marginRight="5dp"
        android:text="|"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/resultsView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/resultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/black"
        android:gravity="end"
        android:textSize="25sp"
        android:textColor="#6C6C6C"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculatorView"
        app:layout_constraintBottom_toTopOf="@+id/menuButtonsLayout"
        tools:layout_editor_absoluteY="156dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:scaleY="0.5"
        android:background="@color/cardview_light_background"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuButtonsLayout"
        app:layout_constraintVertical_bias="0.72" />

    <LinearLayout
        android:id="@+id/menuButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView">


        <ImageButton
            android:id="@+id/historyButton"
            android:tag="historyButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/black_selector"
            android:src="@drawable/ic_history"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/conversionButton"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/black_selector"
            android:src="@drawable/ic_unit"
            android:tag="Conversion"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/longButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:background="@drawable/black_selector"
            android:src="@drawable/ic_science"
            android:tag="Port"
            android:layout_gravity="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tipButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/black_selector"
            android:text="%"
            android:textColor="#D6D6D6"
            android:tag="Port"
            android:layout_gravity="center"
            android:textSize="25sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/deleteButtonOne"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:background="@drawable/black_selector"
        android:src="@drawable/ic_del_off"
        android:tag="delete"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsView" />


</androidx.constraintlayout.widget.ConstraintLayout>
